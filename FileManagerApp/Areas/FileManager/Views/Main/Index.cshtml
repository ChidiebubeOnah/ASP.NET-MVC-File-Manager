
@{
    ViewBag.Title = "Main";
}

<div class="container">
    <div class="card my-5">
        <div class="card-toolbar">
            <div class="btn-group" role="group" aria-label="Top Toolbar">
                <button type="button" class="btn btn-secondary go-back">
                    <i class="fal fa-arrow-left"></i>
                </button>
                <button type="button" class="btn btn-secondary disabled"><i class="fal fa-arrow-right"></i></button>
            </div>
            <div class="btn-group" role="group" aria-label="Top Toolbar">
                <button type="button" class="btn btn-secondary new-file">
                    <i class="fal fa-file-plus"></i>
                </button>
                <button type="button" class="btn btn-secondary new-folder">
                    <div class="fal fa-plus"></div>
                    <i class="fal fa-folder"></i>
                </button>
                <button type="button" class="btn btn-secondary">
                    <i class="fal fa-upload"></i>
                </button>
            </div>
        </div>

        <div class="card-address-bar input-group">
            <input type="text" class="form-control" name="current-path" 
                   value="ROOT">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" id="update">
                    <i class="fal fa-sync-alt"></i>
                </button>
                <button class="btn btn-outline-secondary" type="button">
                    <i class="fal fa-arrow-right"></i>
                </button>
            </div>
        </div>

        <div class="card-body">
            <div id="items-wrapper"></div>
        </div>
    </div>
</div>